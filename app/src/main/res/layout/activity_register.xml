<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/red"
    tools:context=".Intro.RegisterActivity">

    <LinearLayout
        android:id="@+id/linear_atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/icon_donor">
        </ImageView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/linear_bawah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_back_login"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyApp.TextInputLayout"
                android:layout_marginBottom="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_input_text"
                    android:fontFamily="@font/nunito"
                    android:hint="nama"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                style="@style/Widget.MyApp.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_input_text"
                    android:fontFamily="@font/nunito"
                    android:hint="email"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                style="@style/Widget.MyApp.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_input_text"
                    android:fontFamily="@font/nunito"
                    android:hint="username"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                style="@style/Widget.MyApp.TextInputLayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_pass"
                    android:hint="password"
                    android:background="@drawable/ic_input_text"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:fontFamily="@font/nunito"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/input_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender "
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lk"
                    android:layout_width="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="40dp"
                    app:civ_border_color="@color/black"
                    android:src="@drawable/ic_group_5">
                </de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pr"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    app:civ_border_color="@color/black"
                    android:src="@drawable/ic_group_4">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_signup"
                android:background="@drawable/ic_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="64dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have account? "
                    android:gravity="center"
                    android:layout_marginVertical="12dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/goLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Sign In"
                    android:gravity="center"
                    android:layout_marginVertical="12dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/red"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
