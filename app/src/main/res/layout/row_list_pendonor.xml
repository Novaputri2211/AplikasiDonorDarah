<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    android:id="@+id/select_pendonor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/l_row_pendonor"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/no"
            android:text="1"
            android:layout_weight="0.9"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_nama_pendonor"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="namayangsangatpanjangnsekaisenlasdlmasd"
            android:singleLine="true"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/jgd"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/ic_goldar"/>
            <TextView
                android:id="@+id/txt_goldarlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_below="@id/l_row_pendonor"
        android:alpha="0.3"/>

</RelativeLayout>