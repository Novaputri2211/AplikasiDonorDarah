<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Penerima.Adapter.ConfirmJemputFragment">

    <View
        android:background="@drawable/rounded"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="40dp"
        android:layout_height="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berapa darah yang sudah diambil?"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"/>

    <RelativeLayout
        android:background="@drawable/ic_add_kantong"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="6dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/minus"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:paddingHorizontal="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/jml_kantong"
            android:text="0"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/plus"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="+"
            android:textColor="@color/black"
            android:paddingHorizontal="12dp"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_confirm"
        android:background="@drawable/ic_submit"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="Konfirmasi"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginVertical="16dp"/>
    </RelativeLayout>


</LinearLayout>