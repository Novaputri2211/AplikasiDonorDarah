<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/red"
    tools:context=".Penerima.NotifikasiDarahActivity">

    <LinearLayout
        android:id="@+id/linear_atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingHorizontal="33dp"
            android:text="NOTIFIKASI"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bawah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@drawable/ic_back_login"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">
            <ImageView
                android:id="@+id/gambar"
                android:translationZ="-1dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_undraw_super_thank_you_re_f8bo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
            </ImageView>
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_weight="1.1">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Penjemputan Darah Berhasil\nDilakukan "
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/t2"
                android:layout_below="@id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Semoga darah yang didonorkan membantu anda!! "
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/btn_home2"
                android:background="@drawable/ic_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="64dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kembali ke Halaman Utama"
                    android:gravity="center"
                    android:layout_marginVertical="12dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>